---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Submit Support | The Civic Chronic">
    <Header />

    <main
        class="flex-grow flex flex-col items-center pt-32 pb-20 px-6 max-w-2xl mx-auto min-h-screen"
    >
        <h1 class="font-serif text-4xl md:text-5xl font-black text-ink mb-2">
            Submit a Failure
        </h1>
        <p class="text-gray-500 text-lg mb-12 text-center">
            Help us document the cracks in the system.
        </p>

        <form
            class="w-full flex flex-col gap-6"
            onsubmit="event.preventDefault(); alert('Report successfully filed directly into the trash bin.');"
        >
            <!-- Step 1 -->
            <div class="flex flex-col gap-2">
                <label
                    for="title"
                    class="text-xs font-bold uppercase tracking-widest text-primary"
                    >Incident Title</label
                >
                <input
                    type="text"
                    id="title"
                    placeholder="e.g., The Bridge to Nowhere"
                    class="w-full p-4 bg-white border border-gray-300 rounded focus:border-primary outline-none transition-colors font-serif text-lg"
                    required
                />
            </div>

            <!-- Step 2 -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="flex flex-col gap-2">
                    <label
                        for="location"
                        class="text-xs font-bold uppercase tracking-widest text-primary"
                        >Location</label
                    >
                    <input
                        type="text"
                        id="location"
                        placeholder="City, Country"
                        class="w-full p-4 bg-white border border-gray-300 rounded focus:border-primary outline-none transition-colors"
                        required
                    />
                </div>
                <div class="flex flex-col gap-2">
                    <label
                        for="date"
                        class="text-xs font-bold uppercase tracking-widest text-primary"
                        >Date Observed</label
                    >
                    <input
                        type="date"
                        id="date"
                        class="w-full p-4 bg-white border border-gray-300 rounded focus:border-primary outline-none transition-colors"
                        required
                    />
                </div>
            </div>

            <!-- Step 3 -->
            <div class="flex flex-col gap-2">
                <label
                    for="description"
                    class="text-xs font-bold uppercase tracking-widest text-primary"
                    >Description</label
                >
                <textarea
                    id="description"
                    rows="5"
                    placeholder="Describe the bureaucratic absurdity in detail..."
                    class="w-full p-4 bg-white border border-gray-300 rounded focus:border-primary outline-none transition-colors resize-none"
                ></textarea>
            </div>

            <!-- File Upload -->
            <div class="flex flex-col gap-2">
                <span
                    class="text-xs font-bold uppercase tracking-widest text-primary"
                    >Evidence</span
                >
                <div
                    class="border-2 border-dashed border-gray-300 rounded p-8 text-center hover:border-primary hover:bg-primary/5 transition-colors cursor-pointer group"
                >
                    <span
                        class="material-symbols-outlined text-4xl text-gray-400 group-hover:text-primary mb-2"
                        >upload_file</span
                    >
                    <p class="text-sm text-gray-500">
                        Drag redacted documents here or click to browse
                    </p>
                    <input type="file" class="hidden" />
                </div>
            </div>

            <!-- Checkbox -->
            <div class="flex items-start gap-3 mt-4">
                <input
                    type="checkbox"
                    id="terms"
                    class="mt-1 w-4 h-4 text-primary border-gray-300 rounded focus:ring-primary"
                    required
                />
                <label for="terms" class="text-sm text-gray-600">
                    I certify that this information is accurate to the best of
                    my knowledge, or at least as accurate as government-supplied
                    statistics. I understand this report may be ignored for 3-5
                    business years.
                </label>
            </div>

            <button
                type="submit"
                class="mt-8 w-full py-4 bg-primary text-white font-bold uppercase tracking-widest rounded hover:bg-primary/90 transition-colors shadow-lg"
            >
                File Report
            </button>
        </form>
    </main>

    <Footer />
</Layout>
